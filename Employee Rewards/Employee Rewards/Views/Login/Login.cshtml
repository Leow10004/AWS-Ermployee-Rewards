@model IEnumerable<MyProject.Models.Password>

@{
    ViewData["Title"] = "Index";
    Layout = "_Locked";
}

<link rel="stylesheet" href="~/css/Login/Login.css" />

<div class="login-form-container">
    <h2>Login</h2>
    <form asp-controller="Login" asp-action="LoginForm" method="post">
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" required />
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" required />
        </div>
        @if (TempData["ErrorMessage"] == "Email" || TempData["ErrorMessage"] == "Password")
        {
            <div class="error" style="background-color: #FFCCCC; color: #000000; border: 1px solid #FF0000; padding: 10px; border-radius: 5px; margin: 10px 0; text-align: center;">
                Invalid @TempData["ErrorMessage"]. Please Try Again.
            </div>
        }
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>